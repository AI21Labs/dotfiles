[gist]
	browse = true
[push]
	default = tracking
[core]
	excludesfile = ~/.gitignore
[help]
	format = web
[alias]
	l = log --graph --oneline --decorate
	d = diff --word-diff
	b = checkout -b
	i = rebase --interactive origin/master
	r = pull --rebase
	p = pull
	c = cherry-pick --signoff
	s = status -sb
	f = !git commit --all --amend --reuse-message=HEAD --date=\"$(date)\"
	x = !gitx
	svn-externals = !git svn show-externals | grep -x \\"[^#].*\\"
	serve = !git daemon --reuseaddr --export-all --base-path=. --verbose ./.git
[instaweb]
	httpd = webrick
[diff]
	tool = opendiff
[difftool "opendiff"]
	path = opendiff
[merge]
	tool = opendiff
[mergetool]
	prompt = false
	keepBackup = false
	keepTemporaries = false
[mergetool "opendiff"]
	path = git-mergetool-opendiff.sh
[apply]
	whitespace = fix
[branch]
	autosetuprebase = remote
[sendemail]
