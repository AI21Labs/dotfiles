[user]
	name = Mike McQuaid
	email = mike@mikemcquaid.com
[color]
	ui = auto
[github]
	user = mikemcquaid
[gist]
	browse = true
[push]
	default = tracking
[rerere]
	enabled = 1
[core]
	excludesfile = ~/.gitignore
[help]
	format = web
[alias]
	# shortened existing commands
	p = pull

	# new commands
	stage = !git add -u
	staged = diff --cached
	unstage = reset HEAD --
	current-branch = !git symbolic-ref HEAD|sed -e 's/refs.heads.//'
	sign = cherry-pick --signoff
	externals = !git svn show-externals | grep -x \\"[^#].*\\"
	serve = !git daemon --reuseaddr --export-all --base-path=. --verbose ./.git
	noff = merge --no-ff
	theirs = noff -Xtheirs
	rebase-against-master = !git fetch --all && git rebase origin/master
	upstream-and-pull-request = !git push --set-upstream origin $(git current-branch) && hub pull-request
	word-diff = diff --word-diff
	push-and-set-upstream = push --set-upstream
	checkout-as-new-branch = checkout -b
	interactively-rebase-against-master = rebase --interactive origin/master
	pretty-one-line-log = log --graph --oneline --decorate
	fix-up-previous-commit = !git commit --all --amend --reuse-message=HEAD --date=\"$(date)\" #"

	# shortened new commands
	rem = !git rebase-against-master
	pr = !git upstream-and-pull-request
	w = !git word-diff
	u = !git push-and-set-upstream
	b = !git checkout-as-new-branch
	i = !git interactively-rebase-against-master
	l = !git pretty-one-line-log || true
	f = !git fix-up-previous-commit
[instaweb]
	httpd = webrick
[diff]
	tool = opendiff
[difftool "opendiff"]
	path = opendiff
[merge]
	tool = opendiff
[mergetool]
	prompt = false
	keepBackup = false
	keepTemporaries = false
[mergetool "opendiff"]
	path = git-mergetool-opendiff.sh
[apply]
	whitespace = fix
[url "git@github.com:"]
	pushInsteadOf = git://github.com/
[url "https://github.com/"]
	#insteadOf = git://github.com/
[url "git@gitorious.org:"]
	pushInsteadOf = git://gitorious.org/
