	b = checkout -b
	i = rebase --interactive origin/master
	r = pull --rebase
	p = pull
	c = cherry-pick --signoff
	f = commit --all --amend --reuse-message=HEAD
	x = !gitx
	serve = !git daemon --reuseaddr --export-all --base-path=. --verbose ./.git
