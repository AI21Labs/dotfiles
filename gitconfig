[user]
	name = Mike McQuaid
	email = mike@mikemcquaid.com
[color]
	ui = auto
[github]
	user = mikemcquaid
[gist]
	browse = true
[push]
	default = tracking
[core]
	excludesfile = ~/.gitignore
[help]
	format = web
[alias]
	stage = !git add -u
	staged = diff --cached
	unstage = reset HEAD --
	sign = cherry-pick --signoff
	externals = !git svn show-externals | grep -x \\"[^#].*\\"
	serve = !git daemon --reuseaddr --export-all --base-path=. --verbose ./.git
	noff = merge --no-ff
	w = diff --word-diff
	u = push --set-upstream
	b = checkout -b
	p = pull
	i = rebase --interactive origin/master
	l = log --graph --oneline --decorate
	f = !git commit --all --amend --reuse-message=HEAD --date=\"$(date)\" #"
[instaweb]
	httpd = webrick
[diff]
	tool = opendiff
[difftool "opendiff"]
	path = opendiff
[merge]
	tool = opendiff
[mergetool]
	prompt = false
	keepBackup = false
	keepTemporaries = false
[mergetool "opendiff"]
	path = git-mergetool-opendiff.sh
[apply]
	whitespace = fix
[url "git@github.com:"]
	pushInsteadOf = git://github.com/
[url "https://github.com/"]
	#insteadOf = git://github.com/
[url "git@gitorious.org:"]
	pushInsteadOf = git://gitorious.org/
[url "git@git.kde.org:"]
	pushInsteadOf = git://anongit.kde.org/
